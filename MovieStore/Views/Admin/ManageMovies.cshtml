@model IEnumerable<MovieStore.Models.Movie>

@{
    ViewData["Title"] = "Manage Movies";
}

<h2>All Movies</h2>

<div class="mb-3">
    <a asp-controller="Admin" asp-action="AddMovie" class="btn btn-primary">Add New Movie</a>
</div>

@if (Model == null || !Model.Any())
{
    <div class="alert alert-warning" role="alert">
        No movies are available at the moment.
    </div>
}
else
{
    <div class="row">
        @foreach (var movie in Model)
        {
            <div class="col-md-3 mb-3">
                <div class="card h-100" style="height: 400px;">

                    <img src="~/images/movies/@movie.ImagePath" alt="@movie.Title" class="card-img-top" style="height: 400px; object-fit: cover;" />
                    <div class="card-body" style="flex-grow: 1;">
                        <h6 class="card-title">@movie.Title</h6>
                        <p class="card-text">Price: @movie.Price.ToString("C")</p>
                    </div>
                    <div class="card-footer d-flex flex-row justify-content-evenly">
                        <a asp-controller="Admin" asp-action="DetailsMovie" asp-route-id="@movie.MovieId" class="btn btn-info btn-block">View Details</a>
                        <a asp-controller="Admin" asp-action="OwnedBy" asp-route-id="@movie.MovieId" class="btn btn-secondary btn-block">Owned By</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

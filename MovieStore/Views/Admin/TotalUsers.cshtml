@model IEnumerable<MovieStore.Models.User>

@{
    ViewData["Title"] = "Manage Users";
}

<h2 class="text-center my-4">All Users</h2>

<div class="container">
    

    @if (Model == null || !Model.Any())
    {
        <div class="alert alert-warning" role="alert">
            No users are available at the moment.
        </div>
    }
    else
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>User Image</th>
                    <th>User Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>
                            @if (!string.IsNullOrEmpty(user.ProfileImagePath))
                            {
                                <img src="~/images/@user.ProfileImagePath" alt="User Image" style="width: 50px; height: 50px; object-fit: cover; border-radius: 50%;" />
                            }
                            else
                            {
                                <span>No image available</span>
                            }
                        </td>
                        <td>@user.UserName</td>
                        <td>@user.Email</td>
                        <td>
                            <a asp-controller="Admin" asp-action="UserOwnedMovies" asp-route-id="@user.UserId" class="btn btn-info btn-sm">Owned Movies</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
</div>

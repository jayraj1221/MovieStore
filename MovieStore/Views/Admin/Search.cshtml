@model IEnumerable<MovieStore.Models.Movie>

<h2>Search Results</h2>

@if (ViewBag.ErrorMessage != null)
{
    <div class="alert alert-danger">
        @ViewBag.ErrorMessage
    </div>
}

@if (!Model.Any())
{
    <p>No movies found matching your search criteria.</p>
}
else
{
    <ul class="list-group">
        @foreach (var movie in Model)
        {
            <li class="list-group-item">
                <div class="card mb-3" style="max-width: 540px;">
                    <div class="row g-0">
                        <div class="col-md-4">
                            <img src="~/images/movies/@(movie.ImagePath ?? "default-movie.jpg")" class="img-fluid rounded-start" alt="@movie.Title" />

                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <h5 class="card-title">@movie.Title</h5>
                                <p class="card-text">
                                    <small class="text-muted">Release Date: @movie.ReleaseDate.ToString("yyyy-MM-dd")</small>
                                </p>
                                <a asp-action="ConfirmPurchase" asp-route-movieId="@movie.MovieId" class="btn btn-success">Purchase</a>
                            </div>
                        </div>
                    </div>
                </div>
            </li>
        }
    </ul>

}

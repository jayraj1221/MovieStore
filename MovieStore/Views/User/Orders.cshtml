@model IEnumerable<MovieStore.Models.Order>

<h2>Your Orders</h2>

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Movie Title</th>
                <th>Order Date</th>
                <th>Total Amount</th>
                <th>Your Rating</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>@order.OrderId</td>
                    <td>@order.Movie.Title</td>
                    <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                    <td>@order.TotalAmount</td>
                    <td>
                        @if (order.Rating != 0)
                        {
                            @order.Rating
                       }
                        else
                        {
                            <a asp-action="RateMovie" asp-route-orderId="@order.OrderId">Rate Movie</a>
                        }
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No orders found.</p>
}

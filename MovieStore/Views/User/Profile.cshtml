@model User

@{
    ViewData["Title"] = "Profile";
}

<h2>Your Profile</h2>

<div class="card" style="width: 18rem;">
    <img src="~/images/@Model.ProfileImagePath" class="card-img-top" alt="Profile Image">
    <div class="card-body">
        <h5 class="card-title">@Model.UserName</h5>
        <p class="card-text"><strong>Email:</strong> @Model.Email</p>
        <a href="@Url.Action("EditProfile", "User")" class="btn btn-primary">Edit Profile</a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}
